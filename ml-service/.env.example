# Application
APP_NAME=Nutri ML Service
APP_VERSION=1.0.0
ENVIRONMENT=development
DEBUG=true

# Server
HOST=0.0.0.0
PORT=8000
WORKERS=4

# Database (PostgreSQL)
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/nutri_db
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# Redis
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=
REDIS_MAX_CONNECTIONS=10

# Cache TTL (in seconds)
CACHE_TTL_FEATURES=3600        # 1 hour
CACHE_TTL_PREDICTIONS=86400    # 24 hours
CACHE_TTL_MODELS=604800        # 7 days

# ML Models
MODEL_STORAGE_PATH=./app/ml_models
MODEL_VERSION=v1.0.0

# Feature Engineering
FEATURE_VERSION=v1.2.3
MIN_DATA_POINTS_FOR_ML=30      # Minimum days of data required

# CORS
CORS_ORIGINS=["http://localhost:3000","http://localhost:5173"]

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Security (change in production!)
SECRET_KEY=your-secret-key-change-this-in-production-please
ALGORITHM=HS256

# Sentry Error Tracking (Optional)
# Get your DSN from: https://sentry.io/settings/[org]/projects/[project]/keys/
# Format: https://[key]@[org].ingest.sentry.io/[project-id]
# SENTRY_DSN=https://xxxxxxx@o123456.ingest.sentry.io/1234567
