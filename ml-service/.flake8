[flake8]
max-line-length = 88
extend-ignore = E203, E501, E402, F601, F841, E127, F401, F541, F824, E231
# E203: whitespace before ':' (black compatibility)
# E231: missing whitespace after ','
# E402: module level import not at top of file (intentional for heavy imports)
# E501: line too long (handled by formatter)
# F401: module imported but unused (common in test fixtures)
# F541: f-string without placeholders (style preference)
# F601: dictionary key repeated (pre-existing in food_database.py - needs separate fix)
# F824: global name unused (caching patterns)
# F841: local variable assigned but never used (debug/placeholder vars)
# E127: continuation line over-indented (style preference)
exclude =
    .git,
    __pycache__,
    venv,
    .venv,
    build,
    dist,
    *.egg-info
